<Window x:Class="Instagram_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Instagram_tool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--Tạo form grid 3x3 cho mainwindow-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Button cho việc like-->
        <Button Name="btn_liketool" 
                Click="btn_liketool_Click"
                Grid.Row="0"
                Grid.Column="0">
            Auto like/unlike
        </Button>
        <Button Name="btn_fastpost"
                Click="btn_fastpost_Click"
                Grid.Row="0"
                Grid.Column="1">
            Fast post
        </Button>
    </Grid>
</Window>
